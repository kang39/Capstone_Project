
<!DOCTYPE html>
<html>
   <head>
      <title> geolocation </title>
      <script type="text/javascript" 
         src="http://maps.google.com/maps/api/js?sensor=false">
      </script> 
      <script type="text/javascript">
         window.onload = function() {
            navigator.geolocation.getCurrentPosition(successCallback, errorCallback);
         }

         function successCallback(wp_position) {
            var wplatlng = new google.maps.LatLng(wp_position.coords.latitude,
wp_position.coords.longitude);
            var wpOptions = {zoom:15, center:wplatlng,
                             mapTypeId:google.maps.MapTypeId.ROADMAP};
            var wpmap = new google.maps.Map(document.getElementById("map"), wpOptions); 
         }

         function errorCallback(wp_position_error) {
            document.getElementById("map").innerHTML = 
                wp_position_error.code + ": " + wp_position_error.message;
         }
      </script>
   </head>
   <body>
      <div id="map" style="width:700px; height:500px;"> </div> 
   </body>
</html>
